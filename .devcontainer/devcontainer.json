// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.134.0/containers/python-3
{
    "name": "QMK",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile"
    },
    // Add the IDs of extensions you want installed when the container is created.
    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.vscode-pull-request-github",
                "timonwong.shellcheck",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
    "postCreateCommand": "qmk setup -H /workspaces/qmk_firmware --yes && ln -sf /workspaces/qmk/keyboards/* /workspaces/qmk_firmware/keyboards/",
    "runArgs": [
        "--userns=keep-id",
        "--volume=${localWorkspaceFolder}:/workspaces/qmk:Z"
    ],
    // Set *default* container specific settings.json values on container create.
    // "settings": {
    // },
    "workspaceFolder": "/workspaces/qmk",
    "workspaceMount": ""
}